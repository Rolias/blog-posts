{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "program": "${workspaceFolder}/src/OptionalChaining/optionalChain.test.ts",
      "preLaunchTask": "tsc: build - tsconfig.json",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ]
    },
    {
      "args": [
        "--timeout",
        "999999",
        "--config",
        ".mocharc.js",
        "--colors",
        "${workspaceFolder}/src"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "pwa-node"
    },
    
    {
      "args": [
        "--timeout",
        "999999",
        "--colors",
        "--config",
        ".mocharc.js",
        "${relativeFile}"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "name": "Mocha Active File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "request": "launch",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/build/**/*.js"
      ],
      "type": "pwa-node"
    }
    
  ]
}